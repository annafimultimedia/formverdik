        }
        h1.main-title { color: #2c3e50; margin: 0 0 5px 0; font-size: 20px; text-transform: uppercase; }
        p.guide-text { color: #e67e22; font-weight: bold; margin-bottom: 20px; font-size: 13px; background: #fff3e0; padding: 8px; border-radius: 5px; display: inline-block; border: 1px solid #ffe0b2; }
        .input-group { margin-bottom: 15px; display: flex; justify-content: center; gap: 10px; flex-wrap: wrap; }
        .input-group input { padding: 10px; border: 2px solid #ddd; border-radius: 6px; width: 260px; font-size: 14px; outline: none; }
